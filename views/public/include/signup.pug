section.signup
  div
    form(action="/signup" method="post").signupform
      div
        h5 Name 
        input(type='text' name='name')
      div
        h5 Email ID 
        input(type='email' name='email')
      div  
        h5 Password 
        input(type='password' id="password" name='password' onChange="onChange()")
      div
        h5 Confirm Password 
        input(type='password' id="confirmpassword" name='confirmpassword' onChange="onChange()")
      button(type="submit" id="submit" ) Register
    div Already have an account #[a(href="/signin") Sign in]